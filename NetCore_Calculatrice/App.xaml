<Application x:Class="NetCore_Calculatrice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NetCore_Calculatrice"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <sys:String x:Key="AppName">Calculatrice</sys:String>
                    <sys:Double x:Key="DefaultFontSize">26</sys:Double>
                </ResourceDictionary>
                <ResourceDictionary Source="Design/BorderResources.xaml" />
                <ResourceDictionary Source="Design/ButtonResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
