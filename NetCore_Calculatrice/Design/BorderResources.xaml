<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="ScreenBorderStyle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFE6E6D5" Offset="0" />
                    <GradientStop Color="#FFD4D5B8" Offset=".4" />
                    <GradientStop Color="#FFCDCEAC" Offset=".6" />
                    <GradientStop Color="#FFE6E6D5" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>